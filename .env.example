# Local Development Environment Variables
# Copy to your project as .env file

# PostgreSQL Database
DATABASE_URL=postgresql://devuser:devpass@localhost:5432/devdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=devdb
POSTGRES_USER=devuser
POSTGRES_PASSWORD=devpass

# Additional PostgreSQL DBs
TEST_DATABASE_URL=postgresql://testuser:testpass@localhost:5432/testdb
API_DATABASE_URL=postgresql://apiuser:apipass@localhost:5432/apidb

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=local-dev-client

# RabbitMQ
RABBITMQ_URL=amqp://devuser:devpass@localhost:5672/dev
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=devuser
RABBITMQ_PASSWORD=devpass
RABBITMQ_VHOST=/dev

# Redis
REDIS_URL=redis://:devpass@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=devpass

# Management UIs
PGADMIN_URL=http://localhost:8080
KAFKA_UI_URL=http://localhost:8081
REDIS_UI_URL=http://localhost:8082
RABBITMQ_UI_URL=http://localhost:15672
